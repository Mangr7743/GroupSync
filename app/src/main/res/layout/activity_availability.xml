<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Repeat blocks like this for each day -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:paddingEnd="16dp"/>

            <!-- Checkboxes for Monday -->
            <!-- Repeat for each time slot -->
            <CheckBox
                android:id="@+id/cb_monday_6pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 PM" />
            <CheckBox
                android:id="@+id/cb_monday_7pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 PM" />
            <CheckBox
                android:id="@+id/cb_monday_8pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 PM" />
            <CheckBox
                android:id="@+id/cb_monday_9pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 PM" />

            <CheckBox
                android:id="@+id/cb_monday_10pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 PM" />

            <CheckBox
                android:id="@+id/cb_monday_11pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 PM" />
            <CheckBox
                android:id="@+id/cb_monday_12am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 AM" />
        </LinearLayout>

        <!-- Repeat above LinearLayout for each day of the week with respective IDs for CheckBoxes -->
        <!-- Example for Tuesday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:paddingEnd="16dp"/>

            <!-- Checkboxes for Tuesday -->
            <CheckBox
                android:id="@+id/cb_tuesday_6pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 PM" />
            <CheckBox
                android:id="@+id/cb_tuesday_7pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 PM" />
            <CheckBox
                android:id="@+id/cb_tuesday_8pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 PM" />
            <CheckBox
                android:id="@+id/cb_tuesday_9pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 PM" />

            <CheckBox
                android:id="@+id/cb_tuesday_10pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 PM" />

            <CheckBox
                android:id="@+id/cb_tuesday_11pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 PM" />
            <CheckBox
                android:id="@+id/cb_monday_12am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 AM" />
            <!-- Add CheckBoxes for 7 PM to 12 AM, similar to Monday -->
            <!-- Continue adding LinearLayouts for Wednesday through Sunday -->
        </LinearLayout>

        <!-- Button at the bottom -->
        <Button
            android:id="@+id/btn_submit_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Availability"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
